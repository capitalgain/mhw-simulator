{
  "name": "mhw-simulator",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rimraf dist src/generated",
    "cp-wasm": "cpx node_modules/glpk.js/glpk.wasm dist/",
    "scripts:generate": "ts-node -P tsconfig.ts-node.json scripts/generate.ts",
    "scripts:fetch": "ts-node -P tsconfig.ts-node.json scripts/fetch.ts",
    "postscripts:fetch": "npm run scripts:generate",
    "prebuild": "npm run clean && npm run scripts:generate && npm run cp-wasm",
    "build": "parcel build src/index.html --public-url https://imasanari.github.io/mhw-simulator/",
    "predev": "npm run prebuild",
    "dev": "parcel src/index.html",
    "test": "tsc -p . --noEmit"
  },
  "author": "iMasanari",
  "license": "GPLv3",
  "dependencies": {
    "action-reducer": "^0.2.0",
    "glpk.js": "^3.0.0",
    "normalize.css": "^8.0.1",
    "promise-worker": "^2.0.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^12.7.5",
    "@types/node-fetch": "^2.5.2",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.4",
    "cpx": "^1.5.0",
    "node-fetch": "^2.6.0",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "browserslist": [
    "last 1 Chrome version"
  ]
}
