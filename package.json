{
  "name": "mhw-simulator",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist/*",
    "cp-wasm": "cp node_modules/glpk.js/glpk.wasm dist/glpk.wasm",
    "predev": "npm run cp-wasm",
    "dev": "parcel src/index.html",
    "prebuild": "npm run clean && npm run cp-wasm",
    "build": "parcel build src/index.html --public-url https://imasanari.github.io/mhw-simulator/",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "iMasanari",
  "license": "GPLv2",
  "dependencies": {
    "glpk.js": "^3.0.0",
    "normalize.css": "^8.0.1",
    "promise-worker": "^2.0.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "devDependencies": {
    "@types/node": "^12.7.5",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "gh-pages": "^2.1.1",
    "parcel-bundler": "^1.12.3",
    "typescript": "^3.6.3"
  },
  "browserslist": [
    "last 1 Chrome version"
  ]
}
